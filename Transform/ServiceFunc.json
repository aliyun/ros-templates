{
  "ROSTemplateFormatVersion": "2015-09-01",
  "Transform": "Aliyun::Serverless-2018-04-03",
  "Description": "Service function test",
  "Parameters": {
    "BucketName": {
      "Type": "String"
    }
  },
  "Resources": {
    "MyService": {
      "Type": "Aliyun::Serverless::Service",
      "Properties": {
        "Description": "local invoke demo",
        "Policies": [
          "AliyunOSSFullAccess",
          {
            "Version": "1",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "oss:Get*",
                  "oss:List*"
                ],
                "Resource": "*"
              }
            ]
          }
        ]
      },
      "MyFunction": {
        "Type": "Aliyun::Serverless::Function",
        "Properties": {
          "Handler": "index.handler",
          "CodeUri": "oss://test-transform/image-crawler.zip",
          "Description": "Hello world with python2.7!",
          "Runtime": "python2.7",
          "Timeout": 300,
          "EnvironmentVariables": {
            "OSSEndpoint": "oss-cn-hangzhou.aliyuncs.com",
            "BucketName": {
              "Ref": "BucketName"
            },
            "LD_LIBRARY_PATH": "/mnt/auto/root/usr/lib:/mnt/auto/root/usr/lib/x86_64-linux-gnu:/mnt/auto/root/lib/x86_64-linux-gnu:/mnt/auto/root/usr/lib64",
            "NODE_PATH": "/usr/local/lib/node_modules:/mnt/auto/node_modules"
          }
        }
      }
    }
  },
  "Outputs": {
    "MyServiceId": {
      "Value": {
        "Fn::GetAtt": [
          "MyService",
          "ServiceId"
        ]
      }
    }
  }
}